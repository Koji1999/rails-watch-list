<div class="container my-3">
  <h1>Lists</h1>
  <div class="row justify-content-start g-2">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <div class="card rounded-5 bg-info">
          <div class="card-category card-img-top rounded-bottom rounded-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://adjameson.wordpress.com/wp-content/uploads/2019/06/marvel-vs-dc.jpg' %>)"></div>
          <div class="card-body">
            <h3 class="card-text"><%= link_to list.name, list_path(list) %></li></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

