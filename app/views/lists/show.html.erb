<div class="container">
  <% if @movie_ratings.any? %>
    <h1>Recommended from: <%= @list.name %></h1>
    <div class="row justify-content-start gx-4 gy-3 border-bottom">
      <% @movie_ratings.each do |movie| %>
        <div class="col-12 col-sm-6 col-lg-4">
          <div class="card rounded-5 bg-secondary mb-3">
            <div class="card-category card-img-top rounded-top-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)"></div>
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-text m-0 truncate"><%= movie.title %></li>
              </div>
              <p class="m-0 text-end"><i class="fa-solid fa-star text-info"></i> <%= movie.rating.round %></p>
            </div>
          </div>
      </div>
      <% end %>
    </div>
  <% end %>

  <div class="row justify-content-center mt-3">
    <div class="col-8 col-offset-2">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="mt-2"><%= @list.name %></h1><div><%= link_to "Create", new_list_bookmark_path(@list), class: "btn btn-danger border-black" %></div>
      </div>
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card mb-3 rounded-5 bg-secondary">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="<%= bookmark.movie.poster_url %>" class="img-fluid rounded-start-5" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <h5 class="card-title m-0"><%= bookmark.movie.title %></h5><%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %><i class="fa-regular fa-trash-can"></i><% end %>
                </div>
                <p class="card-text"><%= bookmark.comment %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
